
{% if ('delete' in actions) and (not hide_delete) %}
    
        <form action="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': entity.id }) }}" }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ '{{ form_widget(delete_form) }}' }}
            <div class="btn-group">
                <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
                    <i class="icon-chevron-left"></i> Powróć do listy
                </a>
                {% if ('edit' in actions) and (not hide_edit) %}
                    
                <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
                    <i class="icon-pencil"></i> Edytuj
                </a>
                
            
                {% endif %}
                <button class="btn btn-danger " type="submit"><i class="icon-white icon-remove"></i> Usuń</button>
            </div>
        </form>
    
{% else %}

        <div class="btn-group">
            <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
                <i class="icon-chevron-left"></i> Powróć do listy
            </a>
            {% if ('edit' in actions) and (not hide_edit) %}
                
            <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
                <i class="icon-pencil"></i> Edytuj
            </a>
            
            
            {% endif %}
        </div>
{% endif %}
