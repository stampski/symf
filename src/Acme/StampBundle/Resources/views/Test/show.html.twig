{% extends 'AcmeStampBundle:Loguj:baza.html.twig' %}

{% block tresc -%}
    <h1>Test</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Imie</th>
                <td>{{ entity.imie }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{{ entity.data|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        
    
        <form action="{{ path('test_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <div class="btn-group">
                <a class="btn" href="{{ path('test') }}">
                    <i class="icon-chevron-left"></i> Powróć do listy
                </a>
                                    
                <a class="btn" href="{{ path('test_edit', { 'id': entity.id }) }}">
                    <i class="icon-pencil"></i> Edytuj
                </a>
                
            
                                <button class="btn btn-danger " type="submit"><i class="icon-white icon-remove"></i> Usuń</button>
            </div>
        </form>
    
{% endblock %}
